---
interface Props {
  comicId: string;
  initialVotes: number;
  hasVoted: boolean;
}

const { comicId, initialVotes, hasVoted } = Astro.props;
---

<div class="vote-container" data-comic-id={comicId}>
  <button 
    id={`vote-btn-${comicId}`}
    class={`vote-button px-6 py-3 rounded-lg font-semibold text-white transition-all ${
      hasVoted 
        ? 'bg-gray-400 cursor-not-allowed' 
        : 'bg-blue-600 hover:bg-blue-700 active:scale-95'
    }`}
    disabled={hasVoted}
  >
    <span class="flex items-center gap-2">
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
        <path d="M2 10.5a1.5 1.5 0 113 0v6a1.5 1.5 0 01-3 0v-6zM6 10.333v5.43a2 2 0 001.106 1.79l.05.025A4 4 0 008.943 18h5.416a2 2 0 001.962-1.608l1.2-6A2 2 0 0015.56 8H12V4a2 2 0 00-2-2 1 1 0 00-1 1v.667a4 4 0 01-.8 2.4L6.8 7.933a4 4 0 00-.8 2.4z" />
      </svg>
      <span id={`vote-count-${comicId}`}>{initialVotes}</span>
      <span>{hasVoted ? 'Voté' : 'J\'aime'}</span>
    </span>
  </button>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const voteButtons = document.querySelectorAll('.vote-button');
    
    voteButtons.forEach(button => {
      button.addEventListener('click', async (e) => {
        const btn = e.currentTarget as HTMLButtonElement;
        if (btn.disabled) return;
        
        const container = btn.closest('.vote-container');
        const comicId = container?.getAttribute('data-comic-id');
        
        if (!comicId) return;
        
        try {
          const response = await fetch('/api/vote', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({ comicId }),
          });
          
          if (response.ok) {
            const data = await response.json();
            
            // Update vote count
            const countSpan = document.getElementById(`vote-count-${comicId}`);
            if (countSpan) {
              countSpan.textContent = data.votes.toString();
            }
            
            // Disable button
            btn.disabled = true;
            btn.classList.remove('bg-blue-600', 'hover:bg-blue-700');
            btn.classList.add('bg-gray-400', 'cursor-not-allowed');
            
            // Update text
            const textSpan = btn.querySelector('span:last-child');
            if (textSpan) {
              textSpan.textContent = 'Voté';
            }
          }
        } catch (error) {
          console.error('Erreur lors du vote:', error);
        }
      });
    });
  });
</script>
